<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.andreibacalu.android.moderncopypaste"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="16" />

    <application
        android:allowClearUserData="false"
        android:debuggable="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.andreibacalu.android.moderncopypaste.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.andreibacalu.android.moderncopypaste.NotificationHandler"></activity>
        <service android:name="com.andreibacalu.android.moderncopypaste.services.ChangeNotificationTextService"></service>
        <receiver android:name="com.andreibacalu.android.moderncopypaste.receivers.ChangeNotificationTextBroadcastReceiver"></receiver>
    </application>

</manifest>